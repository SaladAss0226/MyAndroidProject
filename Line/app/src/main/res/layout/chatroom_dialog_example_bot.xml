<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <ImageView

        android:id="@+id/imgv_bighead"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/img01"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_botDialog"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="9dp"

            android:paddingHorizontal="10dp"
            android:text="hi,how are you?"
            android:textSize="14sp"
            android:gravity="center"

            android:background="@drawable/chatroom_dialog_radious_white"
            app:layout_constraintStart_toStartOf="@+id/view_tail"
            app:layout_constraintTop_toTopOf="parent"
            />

    <View
        android:id="@+id/view_tail"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/tail_bot"
        app:layout_constraintStart_toEndOf="@+id/imgv_bighead"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>